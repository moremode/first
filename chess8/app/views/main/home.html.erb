<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
  <script type="text/javascript">
      function externalLinks() {
          links = document.getElementsByTagName("a");
          for (i=0; i<links.length; i++) {
              link = links[i];
              if (link.getAttribute("href") && link.getAttribute("rel") == "external")
                  link.target = "_blank";
          }
      }
      window.onload = externalLinks;
  </script>
</head>
<body>
  <div class="all">
    <div style="height: 1px"></div>
    <h1 class="header1">Champions</h1>
    <div class="wins-container">
      <a href="<%= @user1.wiki_page %>" rel="external" class="div-href">
        <div class="winner">
          <img src="<%= image_url(@user1.picture_num + '.jpg') %>" alt="">
          <p><%= @user1.name + ' ' + @user1.last_name %></p>
          <p><%= @user1.born_year %>-<%= (@user1.death_year == nil) ? 'н.в.' : @user1.death_year %></p>
          <p><%= @user1.champs_years %></p>
        </div>
      </a>
      <a href="<%= @user2.wiki_page %>" rel="external" class="div-href">
        <div class="winner">
          <img src="<%= image_url(@user2.picture_num + '.jpg') %>" alt="">
          <p><%= @user2.name + ' ' + @user2.last_name %></p>
          <p><%= @user2.born_year %>-<%= (@user2.death_year == nil) ? 'н.в.' : @user2.death_year %></p>
          <p><%= @user2.champs_years %></p>
        </div>
      </a>
      <a href="<%= @user3.wiki_page %>" rel="external" class="div-href">
        <div class="winner">
          <img src="<%= image_url(@user3.picture_num + '.jpg') %>" alt="">
          <p><%= @user3.name + ' ' + @user3.last_name %></p>
          <p><%= @user3.born_year %>-<%= (@user3.death_year == nil) ? 'н.в.' : @user3.death_year %></p>
          <p><%= @user3.champs_years %></p>
        </div>
      </a>
    </div>
    <div id="players">
      <div id="champs-users">
        <h1 class="header1">Наши чемпионы</h1>
        <% (User.all.select {|x| x.is_champion}).each do |champ|%>
          <a href="/user?id=<%= champ.id %>" class="div-href">
            <div class="user-champ-container">
              <img src="<%= image_url(champ.picture_num + '.jpg') %>" alt="" class="user-img">
              <span class="user-text"><%= champ.name %></span>
            </div>
          </a>
        <% end %>
      </div>
      <div id="default-users">
        <h1 class="header1">Обычные пользователи</h1>
        <% (User.all.select {|x| !x.is_champion}).each do |user|%>
          <a href="/user?id=<%= user.id %>" class="div-href">
            <div class="default-user-container">
              <span><%= user.name + ' ' + user.last_name %></span>
            </div>
          </a>
        <% end %>

      </div>
    </div>
  </div>
</body>
</html>